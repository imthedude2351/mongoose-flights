<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>
  <div>Departure: </div>
  <div><%= flight.departs %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>


  <div>Seat:</div>
    <ul>
      <%- flight.ticket.map(f => 
        `<li>${f.seat} <small>${f.price}</small></li>`
      ).join('') %>
    </ul>
  <!-- end cast list -->
</section>
<!-- add to cast form below this comment -->
<form id="add-seat-to-flight" action="/flights/<%= flight._id %>/tickets" method="POST">
  <select name="ticketId">
    //<%- ticket.map(p => 
      `<option value="${t._id}">${t.seat}</option>`
    ).join('') %>
 </select>
 <input name="seat" required pattern="[A-F][1-9]\d?">
 <button type="submit">Add to Flight</button>
</form>

<br><br><h2>Destination</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Arrival Date:</label>
  <input type="datetime-local" name="arrival">
  
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN" selected>DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
</select>
  <input type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Arrival Date</th>
        <th>Airport</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(f) { %>
        <tr>
          <td><%= f.arrival %></td>
          <td><%= f.airport %></td>

        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>
<%- include('../partials/footer') %>